!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %title MyLSF MockUp
    %link{:rel => 'stylesheet', :href => '../bower_components/mobile-angular-ui/dist/css/mobile-angular-ui-hover.min.css'}
    %link{:rel => 'stylesheet', :href => '../bower_components/mobile-angular-ui/dist/css/mobile-angular-ui-base.min.css'}
    %link{:rel => 'stylesheet', :href => '../bower_components/mobile-angular-ui/dist/css/mobile-angular-ui-desktop.min.css'}
  %body
    #mainSidebar.sidebar.sidebar-left{:toggleable => true, 'parent-active-class' => 'sidebar-left-in'}
      %h1.app-name My App
      .scrollable
        .scrollable-content
          .list-group{:toggle => 'off', :bubble => true, :target => 'mainSidebar'}
            %a.list-group-item{:href => '#/'}
              Home
              %i.fa.fa-chevron-right.pull-right
    .app
      .navbar.navbar-app.navbar-absolute-top
        .navbar-brand.navbar-brand-center{'yield-to' => 'title'}
          %span My App
        .btn-group.pull-left
          .btn.btn-navbar.sidebar-toggle{'ng-click' => 'toggle("mainSidebar")'}
            %i.fa.fa-bars
            Menu
        .btn-group.pull-right{'yield-to' => 'navbarAction'}
          .btn.btn-navbar
            %i.fa.fa-plus
            New  
    .navbar.navbar-app.navbar-absolute-bottom
      .btn-group.justified
        %a.btn.btn-navbar.btn-icon-only{:href => '#/route1'}
          %i.fa.fa-home.fa-navbar
        %a.btn.btn-navbar.btn-icon-only{:href => '#/route2'}
          %i.fa.fa-list.fa-navbar

    .app-body
      %ng-view.app-content
        .search-bar
          %label{:for => 'search'} Bitte gib einen Studiengang oder eine Veranstaltung an!
          %input#search{:type => 'search'}
        .results
          %ul
            %li Analysis
            %li Geometrie
            %li Höhere Mathematik II
            %li Informatik
            %li Luft- und Raumfahrttechnik
        .details
          %ol
            %li Vorlesung Analysis
            %li 
              V.57.01
              %a{:href => 'http://maps.google.de/', :title => 'Position in Google Maps'} Wo ist das?
            %li Prof. TeknD Weidl
            %li
              %a{:href => 'uebungen/ws2015/analysis1/'} Übung Analysis 1
            %li 
              Mo, 
              %time{:datetime => '2014-09-15T09:45'}9:45 Uhr
              bis
              %time{:datetime => '2014-09-15T11:15'}11:15 Uhr
              %span.star In den Kalender übernehmen
              %span.bookmark Diese Veranstaltung merken
    %script{:src => '../bower_components/angular/angular.min.js'}
    %script{:src => '../bower_components/mobile-angular-ui/dist/js/mobile-angular-ui.min.js'}
